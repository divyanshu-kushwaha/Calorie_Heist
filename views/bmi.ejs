<%- include('partials/header') %>
<%- include('partials/sidenav') %>
    <title>BMI Calculator</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
        integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
        integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">


    <div class="translucent" style="display: flex; width:65%; left:100px; top:40px">
        <div style="width:40%; margin:5%;">
            <h3 style="display: block;">BMI</h3>
            <hr>
            <p class="lead">Body Mass Index (BMI) is a person's weight in kilograms divided by the square of height
                in meters. A high BMI can indicate high body fatness.</p>

        </div>
        <form action="/bmi" method="post" style="width:60%; padding:15px;margin-top:20px">

            <div class="form-group">
                <label for="height">Enter your Height (in cm)</label>
                <input type="text" name="height" class="form-control">
            </div>

            <div class="form-group">
                <label for="weight">Enter your Weight (in kg)</label>
                <input type="text" name="weight" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <label for="result" style="margin: 15px 0px 15px 25px;">Your BMI:</label>
            <output name="result">
                <%= bmi %>
            </output>

        </form>
    </div>


    </body>

    </html>