<%- include('partials/header') %>
<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <title>Register</title>
  <link rel="icon" href="images/favicon.ico" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.6.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body class="text-center">
  <br>
  <div class="translucent">
    <form action="/user/register" method="post">
      <div>
        <img src="/images/foodlogo.png" alt="" width="100" height="100" />
      </div>
      <h2 class="h3 mb-3 fw-normal">SignUp for our Calorie App!</h2>

      <div class="form-floating">
        <input type="text" name="firstName" class="form-control top" placeholder="First Name">
        <label for="floatingInput">First Name</label>
      </div>
      <div class="form-floating">
        <input type="text" name="lastName" class="form-control middle1" placeholder="Last Name">
        <label for="floatingInput">Last Name</label>
      </div>
      <div class="form-floating">
        <input type="email" name="username" class="form-control middle2" placeholder="Enter your email">
        <label for="floatingInput">Email address</label>
      </div>

      <div class="form-floating">
        <input type="password" class="form-control bottom" name="password" placeholder="Password">
        <label for="password">Password</label>
      </div>

      <button class="w-100 btn btn-lg btn-primary" type="submit">Sign Up</button>

      <br>
      <br>
      <h6>Already an user?
        <a href="/user/login"> Login Here</a>
      </h6>
      <p class="mt-5 mb-3 text-muted">&copy; Dev Pilots</p>
    </form>
</body>

</html>